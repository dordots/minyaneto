<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:contentPadding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="4.66"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="name"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_gravity="center_vertical"
            android:id="@+id/synagogue_name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.61"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/prayer_time"
            android:text="time" />
        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/synagogue_distance"

            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_more_info"
            android:id="@+id/synagogue_details"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_navigation_icon"
            android:layout_gravity="center"
            android:id="@+id/go_waze"/>

    </LinearLayout>
</android.support.v7.widget.CardView>